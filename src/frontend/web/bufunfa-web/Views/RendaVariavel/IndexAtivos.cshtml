@{
    ViewData["Titulo"] = "Ativos";
    Layout = "_Master";
}

@section ViewsJs
{
    <environment include="Development">
        <script src="~/js/views/renda-variavel-ativos.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/views/renda-variavel-ativos.min.js"></script>
    </environment>
}

<div class="row mb-3">
    <div class="col-sm-12">
        <button class="btn btn-sm btn-secondary btn-hover-primary" id="btn-cadastrar-renda-variavel">
            <i class="la la-plus"></i>Adicionar
        </button>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="kt-portlet" id="portlet-dividendos" data-ktportlet="true">
            <div class="kt-portlet__head popup">
                <div class="kt-portlet__head-label">
                    <span class="kt-portlet__head-icon">
                        <i class="fas fa-chart-line"></i>
                    </span>
                    <h3 class="kt-portlet__head-title">
                        Ações
                    </h3>
                </div>
                <div class="kt-portlet__head-toolbar">
                    <div class="kt-portlet__head-group">
                        <a href="#" data-ktportlet-tool="toggle" class="btn btn-sm btn-icon btn-clean btn-icon-md"><i class="la la-angle-down"></i></a>
                    </div>
                </div>
            </div>
            <div class="kt-portlet__body">
                <div id="divValorDividendos">

                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="kt-portlet" id="portlet-fii" data-ktportlet="true">
            <div class="kt-portlet__head popup">
                <div class="kt-portlet__head-label">
                    <span class="kt-portlet__head-icon">
                        <i class="fas fa-city"></i>
                    </span>
                    <h3 class="kt-portlet__head-title">
                        Fundos imobiliários (FIIs)
                    </h3>
                </div>
                <div class="kt-portlet__head-toolbar">
                    <div class="kt-portlet__head-group">
                        <a href="#" data-ktportlet-tool="toggle" class="btn btn-sm btn-icon btn-clean btn-icon-md"><i class="la la-angle-down"></i></a>
                    </div>
                </div>
            </div>
            <div class="kt-portlet__body">
                <div id="divFiis">

                </div>
            </div>
        </div>
    </div>
</div>